- model_class = RentalOrder
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:customer_id) + ':'
  %br
  = rental_order.customer_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = rental_order.user_id
%p
  %strong= model_class.human_attribute_name(:car_id) + ':'
  %br
  = rental_order.car_id
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = rental_order.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = rental_order.end_date


= link_to t('.back', :default => t("helpers.links.back")), rental_orders_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_rental_order_path(rental_order), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), rental_order_path(rental_order), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
